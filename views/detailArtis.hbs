{{>headers}}
{{>navbar}}

<div class="container mt-2">
  <div class="row align-items-center">
    <div class="col-4">
      <img src="/public/uploads/image/{{artis.photo}}" class="img-thumbnail mx-auto d-block mt-4 mb-4" alt="Default Image" style="width: 150px;height:200px">
    </div>
    <div class="col-8">
      <h1 class="text-primary text-center">{{artis.name}}</h1>
      <P class="text-center">{{artis.about}}</P>
    </div>
  </div>
  <div class="container"> 
    <div class="row g-1">
      {{#each musics}}
      <div class="col-6 col-sm-4 col-md-3 col-lg-2">
        <div class="card mx-auto" style="width: 9rem;">
          <img src="/public/image/defaultImage.png" class="card-img-top img-fluid" alt="Default Image" style="height:8rem;">
          <div class="card-body">
            <p class="card-title text-center" style="height: 50px; overflow:hidden">{{this.title}}</p>
            <a href="/music/detail/{{this.id}}" class="btn btn-primary w-100 mb-2">Play</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

{{>footer}}